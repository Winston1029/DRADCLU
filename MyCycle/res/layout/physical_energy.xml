<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical" android:layout_height="fill_parent">
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_gravity="fill_vertical" android:layout_weight="1">
        <ViewStub android:id="@+id/vstub_p" 
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" android:layout="@layout/physical_chart"></ViewStub>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout2" android:orientation="vertical" android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/linearLayout3" android:layout_height="wrap_content" android:layout_width="fill_parent">
            <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Prev" android:id="@+id/btn_pre"></Button>
            <TextView android:layout_height="wrap_content" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_weight="1" android:fadeScrollbars="true" android:enabled="true"></TextView>
            <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Next" android:id="@+id/btn_next"></Button>
        </LinearLayout>
        <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/linearLayout4" android:gravity="center_horizontal">
            <TextView android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Your Birthday" android:visibility="visible"></TextView>
            <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:inputType="date" android:id="@+id/etv_bday">
                <requestFocus></requestFocus>
            </EditText>
            <TextView android:text="TextView" android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:visibility="invisible"></TextView>
        </LinearLayout>
        <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/linearLayout5" android:gravity="center_horizontal">
            <TextView android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:visibility="visible" android:text="Month to Check"></TextView>
            <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:inputType="date" android:id="@+id/etv_mon2chk"></EditText>
            <TextView android:text="TextView" android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:visibility="invisible"></TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>