<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">
	<LinearLayout android:layout_height="60dip"
		android:layout_width="fill_parent" android:layout_weight="1"
		android:orientation="vertical" android:id="@+id/lLayout_now">
		<TextView android:layout_height="wrap_content" android:text="Now"
			android:layout_weight="1" android:layout_width="fill_parent"
			android:id="@+id/txv_now" android:textSize="25dip"
			android:gravity="center_vertical|fill_vertical"></TextView>
		<DigitalClock android:id="@+id/dClock_now"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:gravity="fill_vertical|center_horizontal"
			android:layout_weight="3" android:text="DigitalClock"
			android:textSize="30dip"></DigitalClock>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/linearLayout3"
		android:orientation="horizontal">
		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/linearLayout4"
			android:orientation="vertical">
			<TextView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:text="Forward"
				android:id="@+id/txv_fwd"></TextView>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:id="@+id/linearLayout5">
				<LinearLayout android:layout_height="fill_parent"
					android:layout_width="wrap_content" android:id="@+id/linearLayout7"
					android:layout_weight="1">
					<CheckBox android:layout_height="wrap_content"
						android:layout_width="wrap_content" android:layout_weight="1"
						android:checked="false" android:gravity="fill_vertical"
						android:text="Sec" android:id="@+id/ckb_fwd_sec"></CheckBox>
				</LinearLayout>
				<LinearLayout android:layout_height="fill_parent"
					android:layout_width="wrap_content" android:id="@+id/linearLayout9"
					android:layout_weight="1">
					<CheckBox android:layout_height="wrap_content"
						android:layout_width="wrap_content" android:layout_weight="1"
						android:text="Min" android:gravity="fill_vertical"
						android:checked="true" android:id="@+id/ckb_fwd_min"></CheckBox>
				</LinearLayout>
				<LinearLayout android:layout_height="fill_parent"
					android:layout_width="wrap_content" android:id="@+id/linearLayout8"
					android:layout_weight="1">
					<CheckBox android:layout_height="wrap_content"
						android:layout_width="wrap_content" android:layout_weight="1"
						android:text="Hour" android:gravity="fill_vertical" android:id="@+id/ckb_fwd_hr"></CheckBox>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:id="@+id/linearLayout6">
				<EditText android:numeric="decimal" android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:layout_weight="1"
					android:text="0" android:id="@+id/etx_fwd_sec"></EditText>
				<EditText android:numeric="decimal" android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:layout_weight="1"
					android:text="5" android:id="@+id/etx_fwd_min"></EditText>
				<EditText android:numeric="decimal" android:text="0"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:layout_weight="1" android:id="@+id/etx_fwd_hr"></EditText>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:layout_height="60dip"
		android:layout_width="fill_parent" android:id="@+id/LinearLayout02"
		android:layout_weight="1" android:orientation="vertical">
		<TextView android:id="@+id/TextView02" android:text="To"
			android:layout_width="fill_parent" android:gravity="center_vertical|fill_vertical"
			android:layout_height="wrap_content" android:textSize="25dip"
			android:layout_weight="0"></TextView>
		<TextView android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:layout_weight="2"
			android:text="9:55:45pm" android:gravity="fill_vertical|center_horizontal"
			android:textSize="30dip" android:id="@+id/txv_alm"></TextView>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/linearLayout1"
		android:gravity="right">
		<ToggleButton android:text="ToggleButton" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/btn_fwd_set"></ToggleButton>
	</LinearLayout>
</LinearLayout>
